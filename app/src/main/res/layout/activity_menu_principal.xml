<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo1"
    tools:context="com.example.carlos.tdam_ejercicio225_josecarlosguerrarobles.MenuPrincipal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/traba1"
            android:layout_gravity="center" />
        <Button
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape"
            android:id="@+id/btnTrabajadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="  trabajadores  "/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/obras1"/>
        <Button
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/shape"
            android:id="@+id/btnObras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="          Obras         "/>
        <Button
            android:background="@drawable/shape2"
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:text="Salir"/>
    </FrameLayout>



</LinearLayout>
